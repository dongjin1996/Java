package ch03.sec05;

public class InfinityAndNaNCheckExample {

	public static void main(String[] args) {
		//무한대 숫자 (infinity) 
		//NaN(Not a number)
		
		int x = 5;
		double y = 0.0;
		double z = x / y;
		
		System.out.println(z);
		
		if(Double.isInfinite(z)) {
			System.out.println("무한대");
		}
		
		double result = z + 2;
		System.out.println(result);
	}

}
