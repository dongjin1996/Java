package ch03.sec04;

public class AccuracyExample1 {

	public static void main(String[] args) {
		//정확한 계산은 정수 연산으로 해야한다.
		
		int apple = 1; //사과 1조각
		int totalPieces = apple * 10; // 10분의1
		int number = 7;
		
		double result = totalPieces - number;  // 1 - 0.7 = 0.3
		System.out.println("사과 1개에서 남은양:" + result);
		
		
	}

}
